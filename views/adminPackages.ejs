<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="css/adminPackages.css">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">



</head>
<body>
    <div class="head navbar navbar-dark">
        <ul>
            <li>  <a href="/compose"> create Package </a> </li>
            <li><a href="/adminDisplay"> all packages</a></li>
            <li><a href="/bookedPackages"> booked Packages</a></li>

        </ul>
    </div>
    <h2>all package</h2><br>
    <div class="container">
        <%  arr.forEach(function(element){%>
          <div class="box">
            <h2> Overall details</h2>
                <p> packageID : <%=element.packageID %></p>
                <p> place : <%=element.place %></p>
                <p> Description : <%=element.description %></p>
                <p> Stay-Amount : <%=element.stayAmt %></p>
                <p> food-Amount : <%=element.foodAmt %></p>
                <p> bus-Amount : <%=element.busAmt %></p>
                <p> train-Amount : <%=element.trainAmt %></p>
                <p> plane-Amount : <%=element.planeAmt %></p>

            <form action="/deletePost" method="post">
                <input type="number" name="packId" value=<%= element.packageID %>>package id
            
                <button type="submit"> delete</button>
            
            </form>
          </div>
              <%   }) %>
      </div>
</body>
</html>