<!DOCTYPE html>
<html lang="en">

<head>
       <meta charset="UTF-8">
       <meta http-equiv="X-UA-Compatible" content="IE=edge">
       <meta name="viewport" content="width=device-width, initial-scale=1.0">
       <title>Document</title>
       <link rel="stylesheet" href="../css/post.css">
       <!-- CSS only -->
       <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
              integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
              crossorigin="anonymous">
</head>

<body>


       <%- include("header") -%>
       <div class="viewbox">
              <% arr.forEach(function(element){%>
                     <% if(element.packageID==pid){ %>
                            <div class="inviewbox">
                                   <div class="titlehead">
                                          <h2> Overall details</h2>
                                   </div>
                                   <div class="boxx" style="margin: 0;">

                                          <h2> Package-ID : </h2>
                                          <p>
                                                 <%=element.packageID %>
                                          </p> <br>
                                          <h2> Place : </h2>
                                          <p>
                                                 <%=element.place %>
                                          </p> <br>
                                          <h2> Description : </h2>
                                          <p>
                                                 <%=element.description %>
                                          </p> <br>
                                          <h2> No of Days : </h2>
                                          <p>
                                                 <%=element.noOfDays %>
                                          </p> <br>
                                          <h2> Stay-Amount : </h2>
                                          <p>
                                                 <%=element.stayAmt %>
                                          </p> <br>
                                          <h2> Food-Amount : </h2>
                                          <p>
                                                 <%=element.foodAmt %>
                                          </p> <br>
                                          <h2> Bus-Amount : </h2>
                                          <p>
                                                 <%=element.busAmt %>
                                          </p> <br>
                                          <h2> Train-Amount : </h2>
                                          <p>
                                                 <%=element.trainAmt %>
                                          </p> <br>
                                          <h2> Plane-Amount : </h2>
                                          <p>
                                                 <%=element.planeAmt %>
                                          </p> <br>

                                   </div>
                            </div>



                            <div class="inviewbox">
                                   <div class="titlehead">
                                          <h2> Customise your plan</h2>
                                   </div>
                                   <div class="boxx">

                                          <form action="/post" method="POST">
                                                 <input type="number" name="packId" readonly="readonly"
                                                        style="display: none;" value="<%=element.packageID %>"> <br>

                                                 <h2> No of Persons </h2>
                                                 <input type="number" name="persons" required> <br><br>

                                                 <h2> Mode of Travel </h2>
                                                 <div class="radio-toolbar">
                                                        <input type="radio" id="Bus" name="travel" required value="1">
                                                        <label for="Bus">Bus</label>
                                                        <input type="radio" id="Train" name="travel" required value="2">
                                                        <label for="Train">Train</label>
                                                        <input type="radio" id="Plane" name="travel" required value="3">
                                                        <label for="Plane">Plane</label>

                                                 </div>
                                                 <br>
                                                 <h2> Food </h2>
                                                 <div class="radio-toolbar">
                                                        <input type="radio" id="foodY" name="food" required value="1">
                                                        <label for="foodY">Yes</label>

                                                        <input type="radio" id="foodN" name="food" required value="0">
                                                        <label for="foodN">No</label>

                                                 </div>
                                                 <br>
                                                 <h2> Tour Date </h2>

                                                 <input type="date" name="date" required> <br><br>


                                                 <button type="submit"> click</button>
                                          </form>

                                          <% } }) %>


                                   </div>
                            </div>
       </div>

       <%- include("footer") -%>

</body>

</html>