             <div class="button-div">
                 
                 <input class="btn btn-dark" type="button" value="Print Bill" onclick="printDiv()"> 
                 <button class="btn btn-dark" ><a href="/display"> Back to home page</a> </button>
                </div>
            </div>
        </div>       

    <script>
        function printDiv() {
            var divContents = document.getElementById("GFG").innerHTML;
            var a = window.open('', '', 'height=500, width=500');
            a.document.write('<html>');
            a.document.write('<body > <h1>reciept :<br>');
            a.document.write(divContents);
            a.document.write('</body></html>');
            a.document.close();
            a.print();
        }
    </script>
